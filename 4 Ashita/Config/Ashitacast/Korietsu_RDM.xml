<variables>
</variables>

<inputcommands>
	<cmd input="/staffon">
		<setvar name="Staff" value="true"/>
		<addtochat color="118">Staves will be used when casting.</addtochat>
	</cmd>
	<cmd input="/staffoff">
		<setvar name="Staff" value="false"/>
		<addtochat color="165">Staves will NOT be used when casting.</addtochat>
	</cmd>
		
</inputcommands>

<idlegear>
	<if p_status="idle">
		<if advanced="$Staff=true"><equip set="Standing" /></if>
		<else><equip set="TP" /></else>
	</if>
	
	<if p_status="resting"><equip set="HMP" /></if>
	
	<if P_status="engaged"><equip set="TP" /></if>
	
</idlegear>

<premagic>
	<equip set="Precast" />
		<if advanced="$Staff=true">
			<equip>
				<main>Chatoyant Staff</main>
				<sub>Vivid Strap +1</sub>
			</equip>
		</if>
</premagic>
	
<midmagic>
	<if ad_skill="Healingmagic">
		<equip set="Healing"/>
	</if>
	
	<if ad_skill="ninjutsu">
		<equip set="NinCast"/>
	</if>
	
	<elseif ad_skill="Enfeeblingmagic">
		<if ad_name="Paralyze*|Slow*">
			<if advanced="$Staff=true">
			<equip>
				<main>Alkalurops</main>
			</equip>
			</if>
			<equip set="Enfeeble_MND"/>
		</if>
		<elseif ad_name="Blind*|Poison*|Gravity*|Bind|Dia*|Sleep*|Silence">
			<if advanced="$Staff=true">
			<equip>
				<main>Alkalurops</main>
			</equip>
			</if>
			<equip set="Enfeeble_INT"/>
		</elseif>
	</elseif>
	
	<elseif ad_skill="Elementalmagic">
		<if ad_name="Blizzard*">
			<equip set="Elemental_Blizzard"/>
		</if>
		<else>
			<equip set="Elemental"/>
		</else>
		<if ad_name="*IV"> <!-- Tier IV -->
				<gearlock length="9" />
		</if>
		<elseif ad_name="*III"> <!-- Tier III -->
				<if ad_name="*ga III">
						<gearlock length="8" />
				</if>
				<else>
						<gearlock length="7" />
				</else>
		</elseif>
		<elseif ad_name="*II"> <!-- Tier II -->
				<if ad_name="*ga II">
						<gearlock length="6" />
				</if>
				<else>
						<gearlock length="5" />
				</else>
		</elseif>
		<else> <!-- Tier I -->
				<if ad_name="*ga">
						<gearlock length="4" />
				</if>
				<else>
						<gearlock length="3" />
				</else>
		</else>
	</elseif>
	
	<elseif ad_skill="Darkmagic">
		<equip set="Dark"/>
	</elseif>
	
	<elseif ad_skill="enhancingmagic">
		<if ad_name="Stoneskin">
			<equip set="Stoneskin"/>
		</if>
		<else>
			<equip set="Enhance"/>
		</else>
	</elseif>		
	
</midmagic>

</ashitacast>